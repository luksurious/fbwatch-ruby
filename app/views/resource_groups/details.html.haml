Details for the resource group
%h1= @resource_group.group_name

%p= link_to 'Destroy', @resource_group, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-small btn-danger'

%p= link_to 'Sync this group', sync_group_path(@resource_group), method: :patch, class: 'btn'

%p
  = link_to 'Activate all', activate_group_path(@resource_group), method: :patch, class: 'btn btn-small'
  = link_to 'Deactivate all', deactivate_group_path(@resource_group), method: :patch, class: 'btn btn-small'

%p= link_to 'Calculate Metrics', group_metrics_path(@resource_group), method: :patch, class: 'btn'

= render layout: "partials/reslist", locals: { resources: @resource_group.resources } do |res|
  %p= link_to 'Remove from group', remove_resource_from_group_path(@resource_group, res), method: :delete, class: 'btn btn-small btn-danger'

