%h1 FBWatch Status
= link_to "View Resources", resources_index_path
%h2 Create new resource group
= simple_form_for(@resource_group) do |f|
  = f.error_notification
  = f.input :group_name, label: "Name"
  = f.button :submit, 'Add'

%h2 Resource Groups
Total:
= @total_groups

- @resource_groups.each do |group|
  %h3
    = link_to group.group_name, resource_group_details_path(group)
  = render("partials/reslist", resources: group.resources)